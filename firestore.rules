rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    
    // Vérifie si l'utilisateur est connecté
    function isAuthenticated() {
      return request.auth != null;
    }

    // Vérifie si l'utilisateur est un membre du staff (non anonyme)
    function isStaff() {
      return isAuthenticated() && request.auth.token.firebase.sign_in_provider != 'anonymous';
    }

    // Vérifie si l'utilisateur a un rôle spécifique (admin, server, kitchen)
    // Le rôle est stocké dans le token (Custom Claims) ou dans le document user
    function hasRole(role) {
      return isAuthenticated() && (
        (request.auth.token.keys().hasAny(['role']) && request.auth.token.role == role) ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role) ||
        (exists(/databases/$(database)/documents/staff/$(request.auth.uid)) && get(/databases/$(database)/documents/staff/$(request.auth.uid)).data.role == role)
      );
    }

    // --- Collection Rules ---

    // 1. MENU & CATEGORIES (Public en lecture, Admin en écriture)
    match /categories/{docId} {
      allow read: if true; // Tout le monde peut voir le menu
      allow write: if hasRole('admin');
    }
    match /products/{docId} {
      allow read: if true;
      allow write: if hasRole('admin');
    }

    // 2. ORDERS
    match /orders/{orderId} {
      allow create: if true; // Les clients peuvent commander sans compte
      allow read: if true;   // Les clients doivent pouvoir lire leur commande pour voir le statut
      allow update: if true; // Les clients doivent pouvoir annuler (update status)
      allow delete: if isAuthenticated(); // Seul le staff peut supprimer
    }

    // 3. STAFF (Admin uniquement, ou lecture de son propre profil)
    match /staff/{userId} {
      allow read: if isAuthenticated(); // Le staff doit pouvoir se lire pour se connecter
      allow write: if hasRole('admin');
    }

    // 8. USERS (Pour l'admin qui se connecte par email)
    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if hasRole('admin');
    }

    // 4. TABLES
    match /tables/{tableId} {
      allow read: if true; 
      allow update: if true; // Les clients mettent à jour le statut (occupied) via le scan
      allow create, delete: if hasRole('admin');
    }
    
    // 9. SCANS (Pour les stats)
    match /scans/{scanId} {
      allow create: if true; // Les clients créent des scans
      allow read: if isStaff();
    }

    // 5. INVOICES (Staff uniquement)
    match /invoices/{invoiceId} {
      allow read, write: if isAuthenticated();
    }

    // 6. REVIEWS (Public en écriture pour les clients, Staff en lecture/gestion)
    match /reviews/{reviewId} {
      allow create: if true; // Les clients peuvent laisser un avis
      allow read: if true;   // Tout le monde peut lire les avis
      allow update, delete: if hasRole('admin'); // Seul l'admin modère
    }

    // 7. SETTINGS (Public en lecture, Admin en écriture)
    match /settings/{docId} {
      allow read: if true; // Nécessaire pour afficher le logo, les couleurs, etc.
      allow write: if hasRole('admin');
    }

    // Fallback: Refuser tout le reste par défaut
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
